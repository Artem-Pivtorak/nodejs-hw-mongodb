{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Node.js Contacts API",
    "description": "API documentation for Contacts management app with Auth",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://nodejs-hw-mongodb-production-6f89.up.railway.app/"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Операції з контактами"
    },
    {
      "name": "Auth",
      "description": "Авторизація користувачів"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Реєстрація користувача",
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Успішна реєстрація"
          },
          "400": {
            "description": "Некоректні дані"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Логін користувача",
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успішний вхід"
          },
          "401": {
            "description": "Невірні облікові дані"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Вихід користувача",
        "operationId": "logoutUser",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Вихід успішний"
          }
        }
      }
    },
    "/auth/current": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Отримати поточного користувача",
        "operationId": "getCurrentUser",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Дані поточного користувача"
          },
          "401": {
            "description": "Неавторизований доступ"
          }
        }
      }
    },
    "/auth/send-reset-email": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Надіслати лист для скидання пароля",
        "operationId": "sendResetEmail",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Лист відправлено"
          },
          "500": {
            "description": "Помилка сервера"
          }
        }
      }
    },
    "/auth/reset-pwd": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Скинути пароль",
        "operationId": "resetPassword",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "token",
                  "newPassword"
                ],
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "newPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пароль оновлено"
          },
          "400": {
            "description": "Некоректний токен або пароль"
          }
        }
      }
    },
    "/contacts": {
      "get": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Отримати список контактів",
          "operationId": "getContacts",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "page",
              "in": "query",
              "schema": {
                "type": "integer"
              },
              "description": "Номер сторінки"
            },
            {
              "name": "perPage",
              "in": "query",
              "schema": {
                "type": "integer"
              },
              "description": "Кількість контактів на сторінці"
            }
          ],
          "responses": {
            "200": {
              "description": "Список контактів отримано"
            },
            "401": {
              "description": "Неавторизований доступ"
            }
          }
        }
      },
      "post": {
        "post": {
          "tags": [
            "Contacts"
          ],
          "summary": "Створити новий контакт",
          "operationId": "createContact",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "required": [
                    "name",
                    "phoneNumber"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "phoneNumber": {
                      "type": "string"
                    },
                    "photo": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Контакт створено"
            },
            "400": {
              "description": "Некоректні дані"
            }
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Отримати контакт за ID",
          "operationId": "getContactById",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "description": "ID контакту",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Контакт знайдено"
            },
            "401": {
              "description": "Неавторизований доступ"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      },
      "patch": {
        "patch": {
          "tags": [
            "Contacts"
          ],
          "summary": "Оновити контакт за ID",
          "operationId": "updateContact",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "description": "ID контакту",
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "phoneNumber": {
                      "type": "string"
                    },
                    "photo": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Контакт оновлено"
            },
            "400": {
              "description": "Некоректні дані"
            },
            "401": {
              "description": "Неавторизований доступ"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      },
      "delete": {
        "delete": {
          "tags": [
            "Contacts"
          ],
          "summary": "Видалити контакт за ID",
          "operationId": "deleteContact",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "description": "ID контакту",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Контакт видалено"
            },
            "401": {
              "description": "Неавторизований доступ"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "schemas": {
    "Contact": {
      "$ref": "../swagger/components/schemas/Contact.yaml"
    },
    "User": {
      "$ref": "../swagger/components/schemas/User.yaml"
    },
    "Error": {
      "$ref": "../swagger/components/schemas/Error.yaml"
    }
  }
}